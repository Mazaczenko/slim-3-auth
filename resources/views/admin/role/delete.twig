{% extends 'admin/templates/admin.twig' %}
{% block content %}
    <div class="text-center">
        <h3>Are you sure you want to delete <b>{{ role.title}}</b> role?</h3>
        <h4 class="text-danger">Warning: This will delete all records tied to this role and cannot be undone!</h4>
        <br>
        <form action="{{ path_for('admin.roles.delete', {roleId: role.id}) }}" method="POST">
            {{ csrf.field | raw }}
            <button type="submit" name="delete" value="true" class="btn btn-danger">Yes, Delete this role</button>
            <button type="submit" name="delete" value="false" class="btn btn-success">No, Don't delete it</button>
        </form>
    </div>
{% endblock %}